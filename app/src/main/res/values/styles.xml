<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Progress Bar -->
    <style name="pb_loading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pb_rect</item>
        <item name="android:visibility">gone</item>
        <item name="android:elevation">10dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Logo -->
    <style name="iv_logo">
        <item name="android:layout_width">@dimen/width_image_size_250dp</item>
        <item name="android:layout_height">@dimen/height_image_size_200dp</item>
        <item name="android:layout_marginTop">@dimen/margin_header_size_100dp</item>
        <item name="android:src">@drawable/img_appicon</item>
    </style>

    <!-- View Line -->
    <style name="v_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_line_size_0_5dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_size_70dp</item>
        <item name="android:layout_marginRight">@dimen/margin_size_70dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- EditText -->
    <style name="et_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_size_70dp</item>
        <item name="android:layout_marginRight">@dimen/margin_size_70dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_size_10dp</item>
    </style>
    <style name="et_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_14dp</item>
    </style>

    <!-- Buttons -->
    <style name="btn_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_info</item>
        <item name="android:textSize">@dimen/text_button_size_16dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="btn_primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textSize">@dimen/text_button_size_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Menu -->
    <style name="ll_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
